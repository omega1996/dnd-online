rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Правила для персонажей
    match /characters/{characterId} {
      // Разрешаем чтение персонажа, если пользователь авторизован
      // Это нужно для просмотра характеристик по tokenId
      allow read: if request.auth != null;
      
      // Вспомогательная функция для проверки структуры персонажа
      function isValidCharacterData() {
        let hasUserId = request.resource.data.userId == request.auth.uid;
        let hasImageUrl = request.resource.data.imageUrl is string;
        
        // Проверяем новую структуру DND (player_name может быть null или строкой + characterData)
        let hasNewStructure = (request.resource.data.player_name == null || request.resource.data.player_name is string)
          && request.resource.data.characterData is map;
        
        // Проверяем старую структуру (name + stats) для обратной совместимости
        let hasOldStructure = request.resource.data.name is string
          && request.resource.data.stats is map
          && request.resource.data.stats.health is int
          && request.resource.data.stats.agility is int
          && request.resource.data.stats.strength is int
          && request.resource.data.stats.intelligence is int;
        
        return hasUserId && hasImageUrl && (hasNewStructure || hasOldStructure);
      }
      
      // Разрешаем создание персонажа авторизованным пользователям
      // Поддерживаем как новую структуру DND, так и старую для обратной совместимости
      allow create: if request.auth != null && isValidCharacterData();
      
      // Разрешаем обновление только своих персонажей
      allow update: if request.auth != null 
        && resource.data.userId == request.auth.uid
        && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['userId']));
      
      // Разрешаем удаление только своих персонажей
      allow delete: if request.auth != null 
        && resource.data.userId == request.auth.uid;
    }
  }
}
